{
  "name": "remo.io",
  "version": "0.2.0",
  "description": "An intuitive, robust and efficient RPC library for Node.js and the browser.",
  "keywords": [
    "rpc",
    "rmi",
    "realtime",
    "socket",
    "websocket"
  ],
  "author": "Daniel Pauli <dapaulid@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dapaulid/remo.io"
  },
  "main": "dist/lib/index.js",
  "scripts": {
    "build": "tsc",
    "postbuild": "tslint --project tsconfig.json",
    "pretest": "npm run build",
    "test": "nyc --silent mocha",
    "posttest": "nyc report --check-coverage",
    "prebundle": "npm test",
    "bundle": "browserify dist/lib/browser.js -o dist/browser/remo.js --standalone remo --exclude uws",
    "preexample": "npm run bundle",
    "example": "node example/server/app.js",
    "start": "nodemon --watch lib --watch test --ext ts --exec npm --silent run example",
    "score": "npm-score --diff reports/package-score.json",
    "preversion": "npm-score --save-report reports/package-score.json --commit --quiet",
    "release": "np"
  },
  "mocha": {
    "diff": true,
    "reporter": "dot",
    "require": [
      "source-map-support/register"
    ],
    "spec": "dist/test/**/*.test.js",
    "slow": 75,
    "timeout": 2000,
    "ui": "bdd"
  },
  "nyc": {
    "all": true,
    "include": [
      "dist/lib"
    ],
    "cache": false,
    "source-map": true,
    "exclude-after-remap": false,
    "statements": 0,
    "branches": 0,
    "functions": 0,
    "lines": 0,
    "reporter": [
      "text",
      "text-summary",
      "lcov"
    ]
  },
  "dependencies": {
    "debug": "^4.1.1",
    "socket.io": "^2.2.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.0",
    "@types/debug": "^4.1.5",
    "@types/mocha": "^5.2.7",
    "@types/socket.io": "^2.1.2",
    "@types/socket.io-client": "^1.4.32",
    "browserify": "^16.5.0",
    "chai": "^4.2.0",
    "express": "^4.17.1",
    "mocha": "^6.2.0",
    "nodemon": "^1.19.1",
    "npm-score": "^1.1.1",
    "nyc": "^14.1.1",
    "source-map-support": "^0.5.13",
    "tslint": "^5.19.0",
    "typescript": "^3.5.3"
  }
}
